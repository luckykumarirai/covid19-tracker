{% extends 'layout.twig' %}

{% block body %}
<center>
<br><br>
  <h2> {{ id }} district wise data</h2><br>
  <div class="container table-responsive">
    <table class="table" id="country-table">
      <thead class="table-dark">
        <tr>
          <th>s.no</th>
          <th>district</th>
          <th>Cases</th>
        </tr>
      </thead>
      <tbody>
      {% set ind = 1 %}
      {% for item in statedistrict %}
      {% if item.id == id %}
      {% for items in item.districtData %}
        <tr>
            <td>{{ ind }}</td>
            <td><a href='#'>{{ items.name }}</a></td>
            <td>{{ items.confirmed }}</td>
        </tr>
      {% set ind=ind+1 %}
      {% endfor %}
      {% endif %}
      {% endfor %}
      </tbody>
    </table>
    <script>
      $(document).ready(function() {
        $('#country-table').DataTable();
      });
    </script>
  </div>
</center>
{% endblock %}
