{% extends 'layout.twig' %}

{% block body %}
<center>
<br><br>
  <h2>Indian state wise data</h2><br>
  <div class="container table-responsive">
    <table class="table" id="country-table">
      <thead class="table-dark">
        <tr>
          <th>s.no</th>
          <th>State</th>
          <th>Cases</th>
          <th>Deaths</th>
          <th>Recovered</th>
          <th>Active</th>
        </tr>
      </thead>
      <tbody>
      {% set ind = 0 %}
      {% for item in indiastate %}
      {% if ind > 0 %}
        <tr>
          <td>{{ ind }}</td>
          <td><a href='/indiadistrictwise/{{ item.id }}'>{{ item.state }}</a></td>
          <td>{{ item.confirmed }}</td>
          <td>{{ item.deaths }}</td> 
          <td>{{ item.recovered }}</td>
          <td>{{ item.active }}</td>
        </tr>
      {% endif %}
      {% set ind=ind+1 %}
      {% endfor %}
      </tbody>
    </table>
    <script>
      $(document).ready(function() {
        $('#country-table').DataTable();
      });
    </script>
  </div>
</center>
{% endblock %}
